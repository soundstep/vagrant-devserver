<VirtualHost *:80>
  ServerName localhost
  DocumentRoot /vagrant
  RewriteEngine On
  
  <Directory /vagrant>
    Options FollowSymLinks Indexes
    AllowOverride None
    Order allow,deny
    Allow from all
  </Directory>
  
  <Directory />
    Options FollowSymLinks
    AllowOverride None
  </Directory>

  LogLevel info
  ErrorLog /var/log/apache-localhost-error.log
  CustomLog /var/log/apache-localhost-access.log combined

  RewriteEngine On
  RewriteLog /var/log/apache-localhost-rewrite.log
  RewriteLogLevel 0

</VirtualHost>
